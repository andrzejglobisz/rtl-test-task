{
    "name": "movies-api",
    "version": "0.1.0",
    "description": "Movies api",
    "main": "index.js",
    "repository": "git@git.epam.com:Andrzej_Globisz/rtl-test-task.git",
    "author": "Andrzej Globisz",
    "license": "ISC",
    "private": true,
    "scripts": {
        "build": "yarn run lint && tsc",
        "dev": "concurrently --names \"lint,tsc\" --prefix \"{name}-{pid}\" \"yarn run lint:watch\" \"tsc --watch\"",
        "lint": "tslint --project ./tsconfig.json",
        "lint:watch": "chokidar \"src/**/*.ts\" --command \"yarn run lint --force\" --initial --verbose --ignore \"node_modules\"",
        "start": "node ./build/index.js",
        "start-dev": "tsc && nodemon ./build/index.js --watch ./build --legacy-watch",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "@types/koa": "^2.0.46",
        "@types/koa-router": "^7.0.31",
        "@types/mongoose": "^5.0.2",
        "@types/node": "^9.3.0",
        "@types/sinon": "^5.0.2",
        "chokidar-cli": "^1.2.0",
        "concurrently": "^3.5.1",
        "jest": "^23.6.0",
        "jest-serializer-html": "^5.0.0",
        "nodemon": "^1.14.11",
        "sinon": "^6.3.2",
        "ts-jest": "^23.1.4",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.7.0",
        "tslint-config-prettier": "^1.9.0",
        "typescript": "^2.8.3"
    },
    "dependencies": {
        "koa": "^2.5.2",
        "koa-body": "^4.0.4",
        "koa-mongoose": "^2.0.0",
        "koa-router": "^7.4.0",
        "log4js": "^2.5.3",
        "mongoose": "^5.0.6",
        "path": "^0.12.7"
    },
    "jest": {
        "testURL": "http://localhost",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts}",
            "!src/**/*.d.{ts}",
            "!src/**/*.spec.{ts}"
        ],
        "transform": {
            "\\.(ts)$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
        "coverageThreshold": {
            "global": {
                "branches": 20,
                "functions": 20,
                "lines": 20,
                "statements": 20
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "snapshotSerializers": [
            "jest-serializer-html"
        ],
        "moduleDirectories": [
            "src",
            "node_modules"
        ]
    }
}
